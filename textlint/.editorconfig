root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# for CRLF testing
[packages/@textlint/text-to-ast/test/snapshots/crlf/input.txt]
end_of_line = crlf

# Matches multiple files with brace expansion notation
# Set default charset
[*.{ts,js}]
charset = utf-8
indent_style = space
indent_size = 4

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
